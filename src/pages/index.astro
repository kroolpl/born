---
import Layout from '../layouts/Layout.astro';
import PropertyCard from '../components/PropertyCard.astro';
import BlogCard from '../components/BlogCard.astro';

const properties = [
  {
    title: "Apartament Park Residence",
    location: "Warszawa, Mokotów",
    price: "1.2M PLN",
    image: "/images/domy1.jpg",
    beds: 4,
    baths: 2,
    sqft: "120 m²"
  },
  {
    title: "Rezydencja Leśna",
    location: "Izabelin",
    price: "2.5M PLN",
    image: "/images/zimowo.jpg",
    beds: 5,
    baths: 3,
    sqft: "250 m²"
  },
  {
    title: "Apartamenty Nadwiślańskie",
    location: "Warszawa, Powiśle",
    price: "890k PLN",
    image: "/images/arch1.jpg",
    beds: 3,
    baths: 2,
    sqft: "85 m²"
  }
];

const blogPosts = [
  {
    title: "The Future of Sustainable Architecture",
    excerpt: "Exploring how modern architectural designs are incorporating sustainable practices while maintaining luxury and elegance.",
    date: "2024-03-15",
    image: "https://images.unsplash.com/photo-1518780664697-55e3ad937233?w=800&q=80",
    category: "Sustainability",
    readTime: "5 min read"
  },
  {
    title: "Minimalism in Modern Luxury Homes",
    excerpt: "How the principles of minimalist design are shaping the future of luxury real estate and creating timeless spaces.",
    date: "2024-03-10",
    image: "https://images.unsplash.com/photo-1600210492486-724fe5c67fb0?w=800&q=80",
    category: "Design",
    readTime: "4 min read"
  },
  {
    title: "Smart Home Integration in Architecture",
    excerpt: "The seamless integration of smart home technology in contemporary architectural design and its impact on luxury living.",
    date: "2024-03-05",
    image: "https://images.unsplash.com/photo-1558036117-15d82a90b9b1?w=800&q=80",
    category: "Technology",
    readTime: "6 min read"
  }
];
---

<Layout title="BORN | Z pasji do jakości">
  <main>
    <!-- Hero Section - Alternative Version 2 (Lighter) -->
    <section class="relative min-h-[90vh] flex items-center overflow-hidden bg-gray-50 pt-24 md:pt-0">
      <!-- Decorative Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-0 right-0 w-1/2 h-full bg-accent opacity-5 -skew-x-12"></div>
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(252,67,28,0.08) 1px, transparent 0); background-size: 40px 40px;"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="flex flex-col md:flex-row items-center gap-16">
          <!-- Content -->
          <div class="flex-1 mt-12 md:mt-0">
            <div class="inline-flex items-center space-x-2 mb-8">
              <span class="h-px w-8 bg-accent"></span>
              <span class="text-accent font-medium tracking-wide text-sm">DEWELOPER BORN</span>
            </div>
            
            <h1 class="font-display text-5xl md:text-7xl font-bold leading-tight mb-8 text-primary">
              Kreujemy 
              <span class="text-accent">Przyszłość</span>
              <br/>
              Budownictwa
            </h1>

            <p class="text-xl text-secondary max-w-2xl leading-relaxed mb-12">
              Tworzymy przestrzenie, które łączą innowacyjną architekturę z najwyższym komfortem życia. Odkryj naszą wizję nowoczesnego budownictwa.
            </p>

            <div class="flex flex-wrap gap-6 items-center">
              <a 
                href="#realizacje" 
                class="group inline-flex items-center bg-accent hover:bg-primary px-8 py-4 rounded-lg font-medium transition-all duration-300 text-white"
              >
                <span>Zobacz Realizacje</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
              <a 
                href="/contact" 
                class="group inline-flex items-center border-2 border-primary hover:border-accent px-8 py-4 rounded-lg font-medium text-primary hover:text-accent transition-all duration-300"
              >
                Skontaktuj się
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </a>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-3 gap-12 mt-16 pt-16 border-t border-gray-200">
              <div>
                <div class="text-4xl font-display font-bold text-accent mb-2">15+</div>
                <div class="text-secondary">Lat doświadczenia</div>
              </div>
              <div>
                <div class="text-4xl font-display font-bold text-primary mb-2">500+</div>
                <div class="text-secondary">Zadowolonych klientów</div>
              </div>
              <div>
                <div class="text-4xl font-display font-bold text-accent mb-2">30+</div>
                <div class="text-secondary">Realizacji</div>
              </div>
            </div>
          </div>

          <!-- Image Stack -->
          <div class="flex-1 relative">
            <div class="relative z-20">
              <div class="relative rounded-2xl overflow-hidden aspect-[4/3]">
                <img 
                  src="/images/firepl.jpg" 
                  alt="BORN Development" 
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
              </div>
              <!-- Floating Elements -->
              <div class="absolute -bottom-8 -right-8 bg-white p-6 rounded-2xl shadow-xl">
                <div class="flex items-center space-x-4">
                  <div class="p-3 bg-accent/10 rounded-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm text-secondary">Aktualnie w realizacji</div>
                    <div class="text-2xl font-display font-bold text-primary">3 Projekty</div>
                  </div>
                </div>
              </div>
              <div class="absolute -top-8 -left-8 bg-white p-4 rounded-2xl shadow-xl">
                <img 
                  src="/images/g66.png" 
                  alt="BORN Logo" 
                  class="h-12 w-auto"
                />
              </div>
            </div>
            <!-- Background Decoration -->
            <div class="absolute top-8 -right-8 w-full h-full border-2 border-accent/20 rounded-2xl -z-10"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Available Properties Section -->
    <section class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <span class="text-accent font-medium px-4 py-2 border border-accent/30 rounded-full text-sm tracking-wide mb-6 inline-block">
            DOSTĘPNE NIERUCHOMOŚCI
          </span>
          <h2 class="font-display text-4xl md:text-5xl font-bold text-primary mb-6">
            Znajdź Swoje Wymarzone Mieszkanie
          </h2>
          <p class="text-xl text-secondary">
            Odkryj nasze najnowsze inwestycje i wybierz idealne miejsce dla siebie i swojej rodziny
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {properties.map((property) => (
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 group">
              <div class="relative">
                <div class="aspect-[4/3] overflow-hidden">
                  <img 
                    src={property.image} 
                    alt={property.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  />
                </div>
                <div class="absolute top-4 right-4">
                  <span class="bg-white/90 backdrop-blur-sm text-primary px-4 py-2 rounded-full text-sm font-medium">
                    {property.price}
                  </span>
                </div>
              </div>
              
              <div class="p-8">
                <h3 class="font-display text-2xl font-bold text-primary mb-2 group-hover:text-accent transition-colors">
                  {property.title}
                </h3>
                <div class="flex items-center text-secondary mb-6">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  {property.location}
                </div>

                <div class="grid grid-cols-3 gap-4 py-6 border-t border-gray-100">
                  <div class="text-center">
                    <div class="text-primary font-bold mb-1">{property.beds}</div>
                    <div class="text-secondary text-sm">Pokoje</div>
                  </div>
                  <div class="text-center">
                    <div class="text-primary font-bold mb-1">{property.baths}</div>
                    <div class="text-secondary text-sm">Łazienki</div>
                  </div>
                  <div class="text-center">
                    <div class="text-primary font-bold mb-1">{property.sqft}</div>
                    <div class="text-secondary text-sm">Powierzchnia</div>
                  </div>
                </div>

                <a 
                  href="/realizacje" 
                  class="mt-6 inline-flex items-center text-accent hover:text-accent/80 font-medium transition-colors"
                >
                  Zobacz szczegóły
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>

        <div class="text-center mt-12">
          <a 
            href="/realizacje" 
            class="inline-flex items-center bg-accent hover:bg-primary px-8 py-4 rounded-lg font-medium transition-all duration-300 text-white"
          >
            <span>Zobacz wszystkie nieruchomości</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Realizacje Section -->
    <section id="realizacje" class="py-24 px-4">
      <div class="container mx-auto">
        <h2 class="font-display text-4xl md:text-5xl font-bold text-primary text-center mb-6">Nasze Realizacje</h2>
        <p class="text-xl text-secondary text-center max-w-3xl mx-auto mb-16">
          Odkryj nasze flagowe inwestycje i przekonaj się, dlaczego jesteśmy liderem w tworzeniu wyjątkowych przestrzeni mieszkalnych
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300">
            <div class="relative overflow-hidden aspect-[4/3]">
              <img 
                src="/images/domy1.jpg" 
                alt="Osiedle Parkowe" 
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute top-4 left-4">
                <span class="bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-medium">
                  Ukończone
                </span>
              </div>
              <div class="absolute bottom-0 inset-x-0 h-1/2 bg-gradient-to-t from-black/60 to-transparent"></div>
            </div>
            <div class="p-8">
              <div class="flex items-center text-secondary text-sm mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Warszawa, Wilanów
              </div>
              <h3 class="font-display text-2xl font-bold text-primary mb-4 group-hover:text-accent transition-colors">
                Osiedle Parkowe
              </h3>
              <p class="text-secondary mb-6">
                Kompleks 12 domów jednorodzinnych w zabudowie szeregowej
              </p>
              <div class="flex justify-between items-center border-t pt-6">
                <div class="text-accent font-display font-bold">2023</div>
                <a 
                  href="/realizacje" 
                  class="inline-flex items-center text-accent hover:text-accent/80 font-medium transition-colors"
                >
                  Dowiedz się więcej
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300">
            <div class="relative overflow-hidden aspect-[4/3]">
              <img 
                src="/images/zimowo.jpg" 
                alt="Rezydencja Leśna" 
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute top-4 left-4">
                <span class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-medium">
                  W realizacji
                </span>
              </div>
              <div class="absolute bottom-0 inset-x-0 h-1/2 bg-gradient-to-t from-black/60 to-transparent"></div>
            </div>
            <div class="p-8">
              <div class="flex items-center text-secondary text-sm mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Izabelin
              </div>
              <h3 class="font-display text-2xl font-bold text-primary mb-4 group-hover:text-accent transition-colors">
                Rezydencja Leśna
              </h3>
              <p class="text-secondary mb-6">
                Ekskluzywne domy wolnostojące w otulinie Kampinoskiego Parku Narodowego
              </p>
              <div class="flex justify-between items-center border-t pt-6">
                <div class="text-accent font-display font-bold">2024</div>
                <a 
                  href="/realizacje" 
                  class="inline-flex items-center text-accent hover:text-accent/80 font-medium transition-colors"
                >
                  Dowiedz się więcej
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300">
            <div class="relative overflow-hidden aspect-[4/3]">
              <img 
                src="/images/arch1.jpg" 
                alt="Apartamenty Nadwiślańskie" 
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute top-4 left-4">
                <span class="bg-orange-100 text-orange-800 px-4 py-2 rounded-full text-sm font-medium">
                  Planowane
                </span>
              </div>
              <div class="absolute bottom-0 inset-x-0 h-1/2 bg-gradient-to-t from-black/60 to-transparent"></div>
            </div>
            <div class="p-8">
              <div class="flex items-center text-secondary text-sm mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Warszawa, Powiśle
              </div>
              <h3 class="font-display text-2xl font-bold text-primary mb-4 group-hover:text-accent transition-colors">
                Apartamenty Nadwiślańskie
              </h3>
              <p class="text-secondary mb-6">
                Nowoczesny kompleks apartamentowy z widokiem na Wisłę
              </p>
              <div class="flex justify-between items-center border-t pt-6">
                <div class="text-accent font-display font-bold">2025</div>
                <a 
                  href="/realizacje" 
                  class="inline-flex items-center text-accent hover:text-accent/80 font-medium transition-colors"
                >
                  Dowiedz się więcej
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="text-center mt-12">
          <a 
            href="/realizacje" 
            class="inline-block bg-accent hover:bg-accent/90 text-white px-8 py-4 rounded-lg font-medium transition-colors"
          >
            Zobacz wszystkie realizacje
          </a>
        </div>
      </div>
    </section>

    <!-- Why Choose BORN Section -->
    <section id="why-choose" class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="font-display text-4xl md:text-5xl font-bold text-primary mb-6">Dlaczego warto wybrać BORN?</h2>
          <p class="text-xl text-secondary max-w-2xl mx-auto">
            Odkryj co wyróżnia nas na tle konkurencji i dlaczego warto nam zaufać
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          <div class="bg-white p-8 shadow-lg hover:shadow-xl transition-shadow">
            <div class="text-accent mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="font-display text-2xl font-bold text-primary mb-4">Jakość i Precyzja</h3>
            <p class="text-secondary">
              Każdy projekt realizujemy z najwyższą dbałością o detale, używając najlepszych materiałów i sprawdzonych rozwiązań.
            </p>
          </div>

          <div class="bg-white p-8 shadow-lg hover:shadow-xl transition-shadow">
            <div class="text-accent mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-display text-2xl font-bold text-primary mb-4">Terminowość</h3>
            <p class="text-secondary">
              Dotrzymujemy ustalonych terminów, zapewniając sprawną realizację projektu od początku do końca.
            </p>
          </div>

          <div class="bg-white p-8 shadow-lg hover:shadow-xl transition-shadow">
            <div class="text-accent mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="font-display text-2xl font-bold text-primary mb-4">Doświadczony Zespół</h3>
            <p class="text-secondary">
              Nasz zespół to wykwalifikowani specjaliści z wieloletnim doświadczeniem w branży budowlanej.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-display text-4xl md:text-5xl font-bold text-primary text-center mb-12">Nasza Wizja</h2>
          <p class="text-xl text-secondary text-center leading-relaxed mb-16">
